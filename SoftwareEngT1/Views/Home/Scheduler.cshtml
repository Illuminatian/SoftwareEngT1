@model IEnumerable<SoftwareEngT1.Models.Schedule>

@{
    ViewData["Title"] = "Scheduler";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<p>Here is my scheduler!</p>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="table">
<table class="table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address</th>
        <th>Appointment Date</th>
        <th>Appointment Time</th>
        <th>Phone Number</th>
        <th>Appointment Type</th>
      </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.FirstName
            </td>
            <td>
                @item.LastName
            </td>
            <td>
                @item.EmailAddress
            </td>
            <td>
                @item.AppointmentDate.ToString("MM-dd-yyyy")
            </td>
            <td>
                @item.AppointmentTime.ToString("HH:mm")
            </td>
            <td>
                @item.PhoneNumber
            </td>
            <td>
                @item.AppointmentType
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>

</table>
</div>

